<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LinkedIn for Robots</title>
    <link href="main.css" rel="stylesheet">
  </head>
  <header>
    <h1>LinkedIn for Robots</h1>
  </header>
  <body class="user-page">
    <div class="hire-links">
      <a href="/for-hire">For Hire</a>
      <a href="/employed">Currently Employed</a>
    </div>

    {{#users}}
    <a class="users" id="{{id}}" href="user-{{id}}">
      <img src="{{avatar}}" alt="avatar picture">
      <div class="users-info">
        <h2>{{name}}</h2>
        {{#job}}<p>{{job}}, {{company}}</p>{{/job}}
        {{^job}}<p><span class="available">Available for hire</span></p>{{/job}}
      </div>
    </a>
    {{/users}}
  </body>
</html>
